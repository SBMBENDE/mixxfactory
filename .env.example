# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mixxfactory?retryWrites=true&w=majority

# JWT
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars

# Admin credentials (for initial setup)
